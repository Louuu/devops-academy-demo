{
    "variables": {
      "client_id": "{{env `ARM_CLIENT_ID`}}",
      "client_secret": "{{env `ARM_CLIENT_SECRET`}}",
      "subscription_id": "{{env `ARM_SUBSCRIPTION_ID`}}",
      "base_image": "ubuntu-base-1.0.0",
      "image_version": "1.0.0"
    },
    "builders": [{
      "type": "azure-arm",
  
      "client_id": "{{user `client_id`}}",
      "client_secret": "{{user `client_secret`}}",
      "subscription_id": "{{user `subscription_id`}}",
      "use_azure_cli_auth": true,
  
      "os_type": "Linux",

      "custom_managed_image_name": "{{user `base_image`}}",
      "custom_managed_image_resource_group_name": "packer-images",
  
      "managed_image_resource_group_name": "packer-images",
      "managed_image_name": "ubuntu-mixed-server-{{user `image_version`}}",
  
      "azure_tags": {
          "owner": "packer"
      },
  
      "location": "UK South",
      "vm_size": "Standard_DS2_v2"
    }],
    "provisioners": [
      {
        "type": "shell",
        "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "script": "../common/scripts/install-ansible.sh"
      },
      {
        "type": "file",
        "source": "../common/ansible/",
        "destination": "/build/ansible"
      },
      {
        "type": "shell",
        "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "script": "../common/scripts/install-ansible.sh"
      },
      {
        "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
        "inline": [
          "/usr/bin/ansible-playbook --connection=local --inventory 127.0.0.1, /build/ansible/configure-server.yml --tags='web, netcat'"
        ],
        "inline_shebang": "/bin/sh -eux",
        "type": "shell"
      },
      {
        "type": "shell",
        "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "script": "../common/scripts/clean-up.sh"
      },
      {
        "type": "shell",
        "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
        "script": "../common/scripts/finalise-image.sh"
      }
  ]
  }